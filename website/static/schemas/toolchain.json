{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialToolchainConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/toolchain",
  "type": "object",
  "properties": {
    "$schema": {
      "default": "https://moonrepo.dev/schemas/toolchain.json",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "deno": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialDenoConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "extends": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "node": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialNodeConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "rust": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialRustConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "system": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialSystemConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "typescript": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialTypeScriptConfig"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "DependencyConfig": {
      "title": "DependencyConfig",
      "type": "object",
      "required": [
        "arch",
        "dep",
        "manager",
        "os",
        "sudo",
        "version"
      ],
      "properties": {
        "arch": {
          "anyOf": [
            {
              "$ref": "#/definitions/SystemArch"
            },
            {
              "type": "null"
            }
          ]
        },
        "dep": {
          "allOf": [
            {
              "$ref": "#/definitions/DependencyName"
            }
          ]
        },
        "manager": {
          "anyOf": [
            {
              "$ref": "#/definitions/SystemPackageManager"
            },
            {
              "type": "null"
            }
          ]
        },
        "os": {
          "anyOf": [
            {
              "$ref": "#/definitions/SystemOS"
            },
            {
              "type": "null"
            }
          ]
        },
        "sudo": {
          "type": "boolean"
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "DependencyName": {
      "title": "DependencyName",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "propertyNames": {
            "type": "string"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "NodePackageManager": {
      "title": "NodePackageManager",
      "type": "string",
      "enum": [
        "npm",
        "pnpm",
        "yarn"
      ]
    },
    "NodeProjectAliasFormat": {
      "title": "NodeProjectAliasFormat",
      "type": "string",
      "enum": [
        "name-and-scope",
        "name-only"
      ]
    },
    "NodeVersionFormat": {
      "title": "NodeVersionFormat",
      "type": "string",
      "enum": [
        "file",
        "link",
        "star",
        "version",
        "version-caret",
        "version-tilde",
        "workspace",
        "workspace-caret",
        "workspace-tilde"
      ]
    },
    "NodeVersionManager": {
      "title": "NodeVersionManager",
      "type": "string",
      "enum": [
        "nodenv",
        "nvm"
      ]
    },
    "PartialBinConfig": {
      "title": "PartialBinConfig",
      "type": "object",
      "properties": {
        "bin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "force": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "local": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialBinEntry": {
      "title": "PartialBinEntry",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/PartialBinConfig"
        }
      ]
    },
    "PartialDenoConfig": {
      "title": "PartialDenoConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#deno",
      "type": "object",
      "properties": {
        "bins": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PartialBinEntry"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "depsFile": {
          "default": "deps.ts",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "lockfile": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "plugin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialNodeConfig": {
      "title": "PartialNodeConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#node",
      "type": "object",
      "properties": {
        "addEnginesConstraint": {
          "default": true,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "aliasPackageNames": {
          "deprecated": true,
          "anyOf": [
            {
              "$ref": "#/definitions/NodeProjectAliasFormat"
            },
            {
              "type": "null"
            }
          ]
        },
        "binExecArgs": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "dedupeOnLockfileChange": {
          "default": true,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "dependencyVersionFormat": {
          "anyOf": [
            {
              "$ref": "#/definitions/NodeVersionFormat"
            },
            {
              "type": "null"
            }
          ]
        },
        "inferTasksFromScripts": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "npm": {
          "anyOf": [
            {
              "$ref": "#/definitions/PartialNpmConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "packageManager": {
          "anyOf": [
            {
              "$ref": "#/definitions/NodePackageManager"
            },
            {
              "type": "null"
            }
          ]
        },
        "plugin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "pnpm": {
          "anyOf": [
            {
              "$ref": "#/definitions/PartialPnpmConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncProjectWorkspaceDependencies": {
          "default": true,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncVersionManagerConfig": {
          "anyOf": [
            {
              "$ref": "#/definitions/NodeVersionManager"
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "yarn": {
          "anyOf": [
            {
              "$ref": "#/definitions/PartialYarnConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialNpmConfig": {
      "title": "PartialNpmConfig",
      "type": "object",
      "properties": {
        "plugin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialPnpmConfig": {
      "title": "PartialPnpmConfig",
      "type": "object",
      "properties": {
        "plugin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialRustConfig": {
      "title": "PartialRustConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#rust",
      "type": "object",
      "properties": {
        "bins": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PartialBinEntry"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "plugin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncToolchainConfig": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialSystemConfig": {
      "title": "PartialSystemConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#system",
      "type": "object",
      "properties": {
        "requirements": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SystemDependency"
              }
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialTypeScriptConfig": {
      "title": "PartialTypeScriptConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#typescript",
      "type": "object",
      "properties": {
        "createMissingConfig": {
          "default": true,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "projectConfigFileName": {
          "default": "tsconfig.json",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "rootConfigFileName": {
          "default": "tsconfig.json",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "rootOptionsConfigFileName": {
          "default": "tsconfig.options.json",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "routeOutDirToCache": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncProjectReferences": {
          "default": true,
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncProjectReferencesToPaths": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialYarnConfig": {
      "title": "PartialYarnConfig",
      "type": "object",
      "properties": {
        "plugin": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "plugins": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "SystemArch": {
      "title": "SystemArch",
      "description": "Architecture of the host environment.",
      "type": "string",
      "enum": [
        "x86",
        "x64",
        "arm",
        "arm64",
        "longarm64",
        "m68k",
        "mips",
        "mips64",
        "powerpc",
        "powerpc64",
        "riscv64",
        "s390x",
        "sparc64"
      ]
    },
    "SystemDependency": {
      "title": "SystemDependency",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "$ref": "#/definitions/DependencyConfig"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "propertyNames": {
            "type": "string"
          }
        }
      ]
    },
    "SystemOS": {
      "title": "SystemOS",
      "description": "Operating system of the host environment.",
      "type": "string",
      "enum": [
        "android",
        "dragonfly",
        "freebsd",
        "ios",
        "linux",
        "macos",
        "netbsd",
        "openbsd",
        "solaris",
        "windows"
      ]
    },
    "SystemPackageManager": {
      "title": "SystemPackageManager",
      "type": "string",
      "enum": [
        "pkg",
        "pkgin",
        "apk",
        "apt",
        "dnf",
        "pacman",
        "yum",
        "brew",
        "choco",
        "scoop"
      ]
    }
  }
}
